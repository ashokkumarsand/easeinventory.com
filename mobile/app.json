{
  "expo": {
    "name": "EaseInventory",
    "slug": "easeinventory",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "easeinventory",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#030407"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.easeinventory.app",
      "infoPlist": {
        "NSCameraUsageDescription": "EaseInventory needs camera access to scan barcodes and take product photos.",
        "NSFaceIDUsageDescription": "Use Face ID to quickly login to EaseInventory."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#030407"
      },
      "package": "com.easeinventory.app",
      "permissions": [
        "CAMERA",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow EaseInventory to access your camera for barcode scanning."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow EaseInventory to use Face ID for authentication."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "apiUrl": "https://easeinventory.com/api",
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
