# EaseInventory Environment Variables
# Copy this file to .env and fill in your values

# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT-REF].supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# App URLs
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_APP_NAME="EaseInventory"
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# JWT
JWT_SECRET="your-jwt-secret"
JWT_EXPIRY="7d"

# Razorpay (Payment Gateway)
RAZORPAY_KEY_ID=""
RAZORPAY_KEY_SECRET=""
RAZORPAY_WEBHOOK_SECRET=""

# Razorpay Subscription Plans
RAZORPAY_PLAN_STARTER_MONTHLY=""
RAZORPAY_PLAN_STARTER_ANNUAL=""
RAZORPAY_PLAN_BUSINESS_MONTHLY=""
RAZORPAY_PLAN_BUSINESS_ANNUAL=""
RAZORPAY_PLAN_PROFESSIONAL_MONTHLY=""
RAZORPAY_PLAN_PROFESSIONAL_ANNUAL=""

# WhatsApp Business API (Optional)
WHATSAPP_ACCESS_TOKEN=""
WHATSAPP_PHONE_NUMBER_ID=""
WHATSAPP_BUSINESS_ACCOUNT_ID=""
WHATSAPP_WEBHOOK_VERIFY_TOKEN=""

# Encryption
ENCRYPTION_KEY="generate-with-openssl-rand-hex-32"
